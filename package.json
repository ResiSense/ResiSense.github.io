{
    "name": "resisense.github.io",
    "version": "1.0.0",
    "description": "ResiSense team site",
    "main": "siteBuilder.ts",
    "scripts": {
        "prod-build": "echo Running prod build script && cross-env NODE_ENV=prod npx ts-node ./siteBuilder.ts",
        "dev-build": "echo Running dev build script && cross-env NODE_ENV=dev npx ts-node ./siteBuilder.ts",
        "dev-watch": "echo Running dev watch script && npx ts-node ./watcher.ts",
        "gitlab-actions": "echo Running gitlab actions script && npx ts-node ./.gitlab/gitlabActions.ts",
        "prettify": "echo Prettifying HTML and JSON files && npx prettier \"docs/**/*.(html|css|js|json)\" --write"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ResiSense/ResiSense.github.io.git"
    },
    "author": "ResiSense",
    "license": "CC-BY-4.0",
    "bugs": {
        "url": "https://github.com/ResiSense/ResiSense.github.io/issues"
    },
    "homepage": "https://github.com/ResiSense/ResiSense.github.io#readme",
    "dependencies": {
        "chokidar": "^3.6.0",
        "fs-extra": "^11.2.0",
        "glob": "^11.0.0",
        "igem-upload-api": "^1.2.4",
        "jsdom": "^24.1.0",
        "marked": "^13.0.2"
    },
    "devDependencies": {
        "@types/fs-extra": "^11.0.4",
        "@types/he": "^1.2.3",
        "@types/jsdom": "^21.1.7",
        "@types/node": "^20.14.11",
        "cross-env": "^7.0.3",
        "prettier": "^3.3.3",
        "typescript": "^5.5.3"
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "singleQuote": true,
        "trailingComma": "es5",
        "arrowParens": "avoid",
        "htmlWhitespaceSensitivity": "strict"
    }
}